<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/aab"
    tools:context=".UserInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/avatar"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/takePicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/take_picture"
            android:textAllCaps="false"
            android:textColor="#F8E4D4D5"
            android:background="@android:color/transparent"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_thambi"
            android:gravity="center"
            android:text="User Information"
            android:textColor="#C35F5F"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:backgroundTint="@color/white"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/infoFNameET"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_bg"
            android:hint="Full Name"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="#F1EAEA"
            android:textColorHint="#a5a3a9"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/infoEmailET"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Email"
            android:minHeight="48dp"
            android:layout_marginStart="10dp"
            android:textColorHint="#a5a3a9"
            android:background="@drawable/shape_bg"
            android:textColor="#F1EAEA"

            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:padding="10dp"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/infoLocationET"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg"
            android:hint="Location"
            android:minHeight="48dp"
            android:textColor="#F1EAEA"
            android:padding="10dp"
            android:textColorHint="#a5a3a9"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/idLocationIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_location"
            android:text="@string/pick_date" />



        <EditText
            android:id="@+id/infoMobNumberET"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Mobile Number"
            android:minHeight="48dp"
            android:layout_marginStart="10dp"
            android:textColorHint="#a5a3a9"
            android:textColor="#F1EAEA"
            android:background="@drawable/shape_bg"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/infoDateET"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textColor="#F1EAEA"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg"
            android:hint="Date Birth.."
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#a5a3a9"
            android:inputType="none"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/dateInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_baseline_calendar_month_24"
            android:text="Pick  Date" />


        <Spinner
            android:id="@+id/infoSpinner"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/radioGroupTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="#F8E4D4D5"
            android:fontFamily="@font/baloo_thambi"
            android:layout_marginStart="20dp"
            android:text="Gender"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#D6B7B7"
                android:textStyle="bold"
                android:id="@+id/radioGroupMale"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Female"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="#D6B7B7"
                android:textStyle="bold"
                android:id="@+id/radioGroupFemale"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/infoSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#5C3C3C"
            android:text="@string/save_user_info"
            android:padding="10dp"
            android:textColorHint="#a5a3a9"
            android:textSize="16sp" />






    </LinearLayout>



</LinearLayout>