<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ww"
    tools:context=".UpdateInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Here You Can Change Your Info :)"
            android:textColor="@color/white"
            android:gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/updateFNameET"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_bg"
                    android:hint="Full Name"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="#F1EAEA"
                    android:textColorHint="#a5a3a9"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/updateEmailET"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:hint="Email"
                    android:textColor="@color/white"
                    android:minHeight="48dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="#a5a3a9"
                    android:background="@drawable/shape_bg"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/updateMobET"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg"
                android:hint="Mobile Number"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#F1EAEA"
                android:textColorHint="#a5a3a9"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/updateLocationET"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Location"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:layout_marginStart="10dp"
                android:textColorHint="#a5a3a9"
                android:background="@drawable/shape_bg"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:padding="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/updateDateET"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bg"
                android:hint="Date Birth.."
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="#a5a3a9"
                android:inputType="none"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/updateDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                android:text="Pick  Date" />
            <EditText
                android:id="@+id/updateGender"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bg"
                android:hint="Gender"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColorHint="#a5a3a9"
                android:inputType="none"
                android:textSize="16sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/updateCareerET"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg"
                android:hint="Career"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#F1EAEA"
                android:textColorHint="#a5a3a9"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/updateCircleIMG"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="15dp"
                android:src="@drawable/avatar"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/retakeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_photo_camera_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/updateInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#985151"
                android:text="Update"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:textAllCaps="false"
                android:textColorHint="#a5a3a9"
                android:textSize="18sp" />
        </LinearLayout>



        </LinearLayout>





    </LinearLayout>
